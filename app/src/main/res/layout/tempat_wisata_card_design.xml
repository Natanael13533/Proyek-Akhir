<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/wisata_img"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/lawang_sewu"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/wisata_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lawang Sewu"
            android:layout_toRightOf="@id/wisata_img"
            android:layout_marginLeft="10dp"
            android:textSize="24sp"
            android:fontFamily="@font/simonetta_regular"/>

        <TextView
            android:id="@+id/wisata_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lawang sewu adalah bangunan perkantoran yang terletak di seberang Tugu Muda, Kota Semarang, Jawa Tengah."
            android:layout_below="@id/wisata_title"
            android:layout_toRightOf="@id/wisata_img"
            android:padding="10dp"/>

        <ImageButton
            android:id="@+id/wisata_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/wisata_img"
            android:layout_below="@id/wisata_desc"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/ic_favorite_red" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>